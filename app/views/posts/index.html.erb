<p id="notice"><%= notice %></p>

<h1>Your CSVs</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3">Options</th>
    </tr>
  </thead>

  <tbody>
  
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= link_to '<button type="button">Show</button>'.html_safe, post %></td>
        <td><%= link_to '<button type="button">Edit</button>'.html_safe, edit_post_path(post) %></td>
        <td><%= link_to '<button type="button">Delete</button>'.html_safe, post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>

  </tbody>
</table>


<br>

<%= link_to  '<button type="button">Upload CSV</button>'.html_safe, new_post_path %>
